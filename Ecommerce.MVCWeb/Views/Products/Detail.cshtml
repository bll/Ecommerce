@model ProductDetailViewModel
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .gallery-wrap .img-big-wrap img {
        height: 450px;
        width: auto;
        display: inline-block;
        cursor: zoom-in;
    }


    .gallery-wrap .img-small-wrap .item-gallery {
        width: 60px;
        height: 60px;
        border: 1px solid #ddd;
        margin: 7px 2px;
        display: inline-block;
        overflow: hidden;
    }

    .gallery-wrap .img-small-wrap {
        text-align: center;
    }

        .gallery-wrap .img-small-wrap img {
            max-width: 100%;
            max-height: 100%;
            object-fit: cover;
            border-radius: 4px;
            cursor: zoom-in;
        }
</style>

<div class="card">
    <div class="row">
        <aside class="col-sm-5 border-right">
            <article class="gallery-wrap">
                <div class="img-big-wrap">
                    <div> <a href="#"><img src="/images/@Model.Product.Image"></a></div>
                </div> <!-- slider-product.// -->
                <div class="img-small-wrap">
                    @foreach (var image in Model.Product.ProductImages) {
                        <div class="item-gallery"> <img src="/images/@image.ImageUrl"> </div>
                    }

                </div> <!-- slider-nav.// -->
            </article> <!-- gallery-wrap .end// -->
        </aside>
        <aside class="col-sm-7">
            <article class="card-body p-5">
                <h3 class="title mb-3">@Model.Product.Name</h3>

                <p class="price-detail-wrap">
                    <span class="price h3 text-warning">
                        <span class="currency"></span><span class="num">@Model.Product.Price</span>
                    </span>
                </p> <!-- price-detail-wrap .// -->
                <dl class="item-property">
                    <dt>Description</dt>
                    <dd>
                        <p>
                            @Model.Product.Description
                        </p>
                    </dd>
                </dl>
                <dl class="param param-feature">
                    <dt>Model#</dt>
                    <dd>@Model.Product.Barcode</dd>
                </dl>  <!-- item-property-hor .// -->

                <hr>
                <div class="row">
                    <div class="col-sm-5">
                        <dl class="param param-inline">
                            <dt>Quantity: </dt>
                            <dd>
                                <select class="form-control form-control-sm" style="width:70px;">
                                    @for (int i = 1; i <= Model.Product.Stock; i++) {
                                        <option> @i </option>
                                      
                                    }
                               

                                </select>
                            </dd>
                        </dl>  <!-- item-property .// -->
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
                <hr>
                <a href="#" class="btn btn-lg btn-primary text-uppercase"> Buy now </a>
                <a href="#" class="btn btn-lg btn-outline-primary text-uppercase"> <i class="fas fa-shopping-cart"></i> Add to cart </a>
            </article> <!-- card-body.// -->
        </aside> <!-- col.// -->
    </div> <!-- row.// -->
</div> <!-- card.// -->