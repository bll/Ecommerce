@model IEnumerable<AdminProductDto>

@{
    ViewData["Title"] = "Product";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h1>Ürün Listesi</h1>
<a class="btn btn-primary mb-3" asp-action="Create">Ürün Ekle</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Barcode</th>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@item.Id</td>
                <th>@item.Barcode</th>
                <td>@item.Name</td>
                <td>@item.Stock</td>
                <td>@item.Price</td>
                <td><a asp-action="Update" asp-route-id="@item.Id">Güncelle</a></td>
                <td><a asp-action="Delete" asp-route-id="@item.Id">Sil</a></td>
            </tr>
        }
    </tbody>
</table>

